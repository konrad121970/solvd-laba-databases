<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.laba.persistence.people.IEmployeeDAO">

    <insert id="create" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO bonus_payments (amount, description, monthly_payments_id) VALUES (#{amount}, #{description},
        #{monthly_payments_id})
    </insert>

    <sql id="employeeSelect">
        SELECT * FROM bonus_payments
    </sql>

    <select id="getById" resultType="Employee">
        <include refid="employeeSelect"/>
        WHERE id = #{id}
    </select>

    <update id="update">
        UPDATE bonus_payments SET amount = #{amount}, description = #{description} WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM bonus_payments WHERE id = ?
    </delete>

    <resultMap id="EmployeeResult" type="com.solvd.laba.domain.people.Employee" autoMapping="false">
        <id column="employee_id" property="id"/>


    </resultMap>

</mapper>